@model Homework2Bouzihay.Pages.PersonalizedPackingRecommendationsModel
@{
    var date = HttpContext.Request.Query["date"];
    var travelerID = HttpContext.Request.Query["travelerID"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Packing Recommendations</title>
    <!--<link rel="stylesheet" href="styles.css">-->
</head>
<body>
    <h1>Packing Recommendations</h1>

    <form id="recommendationForm">
        <label for="travelerID" id="travelerID">Enter Traveler ID:</label>
        <input type="text" id="travelerID" name="travelerID">

        <label for="date" id="date">Select Date:</label>
        <input type="date" id="date" name="date">

        <button type="button" onclick="fetchRecommendations()">Get Recommendations</button>
    </form>

    
    <div id="recommendations" style="visibility:hidden;">

    </div>


   
</body>
</html>
<script type="module">

    fetchRecommendations("@travelerID", "@date")

</script>